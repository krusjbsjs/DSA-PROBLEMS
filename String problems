//  Measuring the Length of a Basic String

function func (){
    console.log("GREK".length);
    
}
func()



// Checking if a String is Empty


function func (){
    let str ="";
    if(str.length === 0)
    {
      console.log("str is empty");
    }
}
func ()


//Accessing the Last Character of a String


function func (){
    let str = "hyisbjsbfjhbsjfbjsbfjevvuj";
    console.log(str.length-1 )
}
func()


//reverse the string


function func(){
    let str = "how are your krutika , hope you are doing fine!";
    let checkReverseStr = str.split('').reverse().join('');
    console.log(checkReverseStr)
}
func()


//Remove a Character From String in JavaScript

function func (){
    let str = "GEEKSFOREVERYONE";
    let repStr = str.replace("G","B");
    console.log(repStr)
}
func()


//JavaScript - Remove Text From a String

function func (){
    let str = "Hello i m learning the javascript programming";
    let remStr = str.replace("javascript", "");
    console.log(remStr);

}
func()


// Delete First Character of a String

function func (){
    let str = "Hello i m learning the javascript programming";
    let remStr = str.slice(1);
    console.log(remStr);

}
func()



//Iterate Over Characters of a String in JS
function func (){
    let str = "Hello i m learning the javascript programming";
    for (let i =0 ;i < str.length ;i++)
    {
        console.log(str[i])
    }
    
}
func()